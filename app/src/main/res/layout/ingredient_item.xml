<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dm_ingredient_item"
    android:layout_height="@dimen/dm_ingredient_item"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <TextView
        android:id="@+id/shake_tv_name"
        android:layout_width="match_parent"
        android:textSize="@dimen/txt_small_ingredient_size"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/txt_shake_ingredient_text"/>

    <ImageView
        android:id="@+id/shake_iv_thumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        tools:src="@drawable/ic_cocktail_menu_item"
        android:contentDescription="@string/txt_shake_ingredient_text" />

</LinearLayout>